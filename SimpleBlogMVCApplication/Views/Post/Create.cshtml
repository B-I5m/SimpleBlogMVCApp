@model SimpleBlogMVCApplication.ViewModels.Post.PostCreateViewModel
@using SimpleBlogMVCApplication.Models.Entities

@{
    ViewData["Title"] = "Create Post";
    var tags = ViewBag.Tags as IReadOnlyCollection<Tag>;
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header">
            <h4 class="mb-0">Create post</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold"></label>
                    <input asp-for="Title" class="form-control" placeholder="Post title" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label fw-semibold"></label>
                    <textarea asp-for="Content"
                              class="form-control"
                              rows="6"
                              placeholder="Write your post..."></textarea>
                    <span asp-validation-for="Content" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <div class="fw-semibold mb-2">Tags</div>

                    <div class="row row-cols-2 row-cols-md-3 g-2">
                        @foreach (var tag in tags ?? Enumerable.Empty<Tag>())
                        {
                            <div class="col">
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="SelectedTagIds"
                                           value="@tag.Id"
                                           id="tag_@tag.Id" />
                                    <label class="form-check-label"
                                           for="tag_@tag.Id">
                                        @tag.Name
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        💾 Save
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        ← Back
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
